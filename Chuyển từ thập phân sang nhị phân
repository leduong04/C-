#include<bits/stdc++.h>
using namespace std;
void abc(int n);
int main()
{
	int n;
	cout<<"N = ";
	cin>>n;
	abc(n);
}
void abc(int n)
{
	int m=n;
	int x,j;
	int a[1000];
	int  dem=0;
	do
	{
		x=n%2;
		n=n/2;
		a[j]=x;
		j++;
		dem++;
		
	}
	while(n!=0);

	cout<<"Dang nhi phan cua "<<m<<" la: ";
	
	for( j=dem-1; j>=0; j--)
	{
		cout<<a[j];
	}
}
